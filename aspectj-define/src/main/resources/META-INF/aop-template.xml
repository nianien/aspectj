<aspectj>

    <aspects>

        <concrete-aspect name="com.scorpio.aspectj.aspects.MyLogAspect"
                         extends="com.scorpio.aspectj.aspects.LogAspect">
            <pointcut name="scope" expression="within(${package-pattern})"/>
        </concrete-aspect>
        <!-- Of the set of aspects declared to the weaver
             use aspects matching the type pattern "com..*" for weaving. -->
        <include within="com.scorpio.aspectj.aspects..*"/>


    </aspects>

    <weaver options="-verbose">
        <!-- Weave types that are within the javax.* or org.aspectj.*
             packages. Also weave all types in the foo package that do
             not have the @NoWeave annotation. -->
        <include within="(!@*..NoWeave *) AND within(${package-pattern})"/>

        <exclude within="com.scorpio.aspectj.define*"/>

    </weaver>

</aspectj>